<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<!-- ############################################################################# -->
	<!-- ##### styles -->
	<!-- ############################################################################# -->
	
	<style id="basic-layer">
		<attributes backgroundImage="name/martingeisse/launcher/assets/dirt.png" imageMode="repeat" childLayout="vertical" />
	</style>
	<style id="field-label">
		<attributes font="aurulent-sans-16.fnt" color="#ffff" />
	</style>
	<style id="error-message">
		<attributes font="aurulent-sans-16.fnt" color="#ffff" />
	</style>
	<style id="button-panel">
		<attributes backgroundColor="#008f" childLayout="center" />
		<effect>
			<onActive name="border" color="#22af" post="true" border="1px" />
			<onHover name="pulsate" scaleFactor="0.008" startColor="#008f" endColor="#22af" post="true" />
		</effect>
	</style>
	<style id="button-panel-calltoaction">
		<attributes backgroundColor="#c22f" childLayout="center" />
		<effect>
			<onActive name="border" color="#e44f" post="true" border="1px" />
			<onHover name="pulsate" scaleFactor="0.008" startColor="#c22f" endColor="#e44f" post="true" />
		</effect>
	</style>
	<style id="button-panel-text">
		<attributes font="aurulent-sans-16.fnt" color="#000f" align="center" valign="center" />
	</style>

	<!-- ############################################################################# -->
	<!-- ##### popups -->
	<!-- ############################################################################# -->

	<popup id="errorPopup" backgroundColor="#000c" childLayout="center">
		<panel width="40%" height="30%" childLayout="vertical">
			<text id="#message" width="100%" height="80%" backgroundColor="#003f" text="ERROR" style="error-message" />
			<panel width="100%" height="20%" style="button-panel">
				<interact onClick="closeErrorPopup()" />
				<text text="OK" style="button-panel-text" />
			</panel>
		</panel>
	</popup>

	<!-- ############################################################################# -->
	<!-- ##### screens -->
	<!-- ############################################################################# -->

	<screen id="start" controller="name.martingeisse.miner.startmenu.StartmenuScreenController">
		<layer style="basic-layer">
			<text margin="80px,0px,0px" align="center" width="40%" style="field-label" text="Username (user)" />
			<control name="textfield" id="username" margin="0px" align="center" width="40%" maxLength="50" />
			<text margin="30px,0px,0px" align="center" width="40%" style="field-label" text="Password (test) "/>
			<control name="textfield" id="password" margin="0px" align="center" width="40%" maxLength="50" passwordChar="*" />
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="login()" />
				<text text="Log in" style="button-panel-text" />
			</panel>
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel">
				<interact onClick="quitGame()" />
				<text text="Quit" style="button-panel-text" />
			</panel>
		</layer>
	</screen>

	<screen id="chooseCharacter" controller="name.martingeisse.miner.startmenu.StartmenuScreenController">
		<layer style="basic-layer">
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="startCreateCharacter()" />
				<text text="Create Character" style="button-panel-text" />
			</panel>
			<control name="scrollPanel" horizontal="false" margin="40px,0px,0px" align="center" width="80%" height="40%">
				<panel childLayout="vertical" x="0px" y="0px" width="100px" height="100px">
					<panel height="50px" width="100px" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
						<interact onClick="startGame()" />
						<text text="Play TODO" style="button-panel-text" />
					</panel>
					<panel height="50px" width="100px" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
						<interact onClick="startGame()" />
						<text text="Play TODO" style="button-panel-text" />
					</panel>
					<panel height="50px" width="100px" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
						<interact onClick="startGame()" />
						<text text="Play TODO" style="button-panel-text" />
					</panel>
					<panel height="50px" width="100px" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
						<interact onClick="startGame()" />
						<text text="Play TODO" style="button-panel-text" />
					</panel>
					<panel height="50px" width="100px" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
						<interact onClick="startGame()" />
						<text text="Play TODO" style="button-panel-text" />
					</panel>
				</panel>
			</control>
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel">
				<interact onClick="quitGame()" />
				<text text="Quit" style="button-panel-text" />
			</panel>
		</layer>
	</screen>

	<screen id="chooseNewCharacterFaction" controller="name.martingeisse.miner.startmenu.StartmenuScreenController">
		<layer style="basic-layer">
			<panel height="10%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="chooseFaction(0)" />
				<text text="The Empire" style="button-panel-text" />
			</panel>
			<panel height="10%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="chooseFaction(1)" />
				<text text="The Order" style="button-panel-text" />
			</panel>
			<panel height="10%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="chooseFaction(2)" />
				<text text="The Barbarians" style="button-panel-text" />
			</panel>
			<panel height="10%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="chooseFaction(3)" />
				<text text="The Nomads" style="button-panel-text" />
			</panel>
			<panel height="10%" width="35%" margin="40px,0px,0px" align="center" style="button-panel">
				<interact onClick="chooseNewCharacterFactionBackButton()" />
				<text text="Back" style="button-panel-text" />
			</panel>
		</layer>
	</screen>

	<screen id="chooseNewCharacterName" controller="name.martingeisse.miner.startmenu.StartmenuScreenController">
		<layer style="basic-layer">
			<text margin="80px,0px,0px" align="center" width="40%" style="field-label" text="Name" />
			<control name="textfield" id="name" margin="0px" align="center" width="40%" maxLength="50" />
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel-calltoaction">
				<interact onClick="finishCreateCharacter()" />
				<text text="Create Character" style="button-panel-text" />
			</panel>
			<panel height="15%" width="35%" margin="40px,0px,0px" align="center" style="button-panel">
				<interact onClick="chooseNewCharacterNameBackButton()" />
				<text text="Back" style="button-panel-text" />
			</panel>
		</layer>
	</screen>

</nifty>
